@model WebVentas.ObjectModel.VendedorRequest


<fieldset>
    <div class="row">
        <input name="IdUsuario" type="hidden" value="@Model.IdUsuario" />
        <input name="IdVendedor" type="hidden" value="@Model.IdVendedor" />
        <input name="IdSupervisor" type="hidden" value="@Model.IdSupervisor" />
        <input name="TiempoSeguimiento" type="hidden" value="@Model.TiempoSeguimiento" />



        <section class="col col-4">
            <label>@Html.DisplayNameFor(model => model.Nombres)</label>

            <label class="input">
                <input name="Nombres" class="form-control" type="text" pattern="[a-z A-Z]+" placeholder="solo letras" value="@Model.Nombres" required />
            </label>
        </section>

        <section class="col col-4">
            <label>@Html.DisplayNameFor(model => model.Apellidos)</label>

            <label class="input">
                <input name="Apellidos" class="form-control" type="text" pattern="[a-z A-Z]+" placeholder="solo letras" value="@Model.Apellidos" required />
            </label>
        </section>

        <section class="col col-4">
            <label>@Html.DisplayNameFor(model => model.Identificacion)</label>

            <label class="input">
                <input name="Identificacion" class="form-control" type="text" pattern="[^ ]+[a-z,A-Z,0-9]+" placeholder="solo letras y números sin espacios" value="@Model.Identificacion" required />
            </label>
        </section>

    </div>

    <div class="row">
        <section class="col col-4">
            <label>@Html.DisplayNameFor(model => model.Direccion)</label>

            <label class="input">
                <input name="Direccion" class="form-control" type="text" pattern="[0-9,a-z ]+" placeholder="solo letras y números" value="@Model.Direccion" required/>
            </label>
        </section>

        <section class="col col-4">
            <label>@Html.DisplayNameFor(model => model.Telefono)</label>

            <label class="input">
                <input name="Telefono" class="form-control" type="text" pattern="[0-9 ]+" placeholder="solo números" value="@Model.Telefono" required/>
            </label>
        </section>

        <section class="col col-4">
            <label>@Html.DisplayNameFor(model => model.Correo)</label>

            <label class="input">
                <input name="Correo" class="form-control" type="email" pattern="[A-Za-z0-9._%+-]+@("@")[a-z0-9.-]+.[a-z]{2,3}" placeholder="alguien123@("@").dirección.com" value="@Model.Correo" required/>
            </label>
        </section>

    </div>


</fieldset>

<script>
    
</script>
