            marker.setMap(null);
            if (MyMarker != null) {
                MyMarker.setMap(null);
            }

                    var markerNuevo = new google.maps.Marker({
                        position: latLng,
                        icon:iconCPN,
                        map: map,
                    });

                    MyMarker = markerNuevo;

                    map.panTo(latLng);

